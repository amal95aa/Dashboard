﻿
<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Sweet Cake</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>

        a {
            color: #754C41;
            text-decoration: none;
        }

        .navbar-brand > img {
            padding: 7px 14px;
        }

        p {
            color: #754C41;
        }
    </style>
</head>


<body>
    <!-- Navbar -->


    <nav class="navbar navbar-expand-lg navbar-light shadow" style="font-size:20px; font-family:'Calisto MT';">
        <div class="container-fluid">

            <a class="navbar-brand text-success logo h1 align-self-center" href="#">
                <img src="~/Images/logo.png" style="width: 190px;">
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#templatemo_main_nav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="align-self-center collapse navbar-collapse flex-fill  d-lg-flex justify-content-lg-between" id="templatemo_main_nav">
                <div class="flex-fill">
                    <ul class="nav navbar-nav d-flex mx-lg-auto">
                        <li class="nav-item">
                            <a class="nav-link" style="color:#754C41;" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#754C41" href="#">Project</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#754C41" href="#">Team</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar align-self-center">
                    <a class="nav-icon position-relative text-decoration-none" href="#">
                        <i class="fa fa-fw fa-cart-arrow-down mr-4" style="color:#754C41; font-size:24px;"></i>
                        <span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark"></span>
                    </a>
                    <a class="nav-icon position-relative text-decoration-none" href="#">
                        <i class="fa fa-fw fa-user mr-3" style="color:#754C41; font-size:24px;"></i>
                        <span class="position-absolute top-0 left-100 translate-middle badge rounded-pill bg-light text-dark"></span>
                    </a>
                </div>
            </div>

        </div>
    </nav>
    <!-- Navbar -->

    <div class="bg-light">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center text-lg-start bg-white text-muted" style="font-size:20px; font-family:'Calisto MT';">
        <!-- Section: Social media -->
        <section class="justify-content-center justify-content-lg-between p-4 border-bottom">
            <div class="text-center">
                <a href="" class="m-4">
                    <i class="fa fa-facebook-f"></i>
                </a>
                <a href="" class="m-4">
                    <i class="fa fa-twitter"></i>
                </a>
                <a href="" class="m-4">
                    <i class="fa fa-google"></i>
                </a>
                <a href="" class="m-4">
                    <i class="fa fa-instagram"></i>
                </a>
            </div>
        </section>
        <!-- Section: Social media -->
        <!-- Section: Links  -->
        <section class="">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold mb-4" style="color:#754C41">About Us </h6>
                        <p>
                            Started off as a hobby out of pure passion to create different beautiful cakes turned into what we are today.
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4" style="color:#754C41">
                            Products
                        </h6>
                        <p>
                            <a href="#!" class="text-reset">Cupcake</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Cookies</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Macarons</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4" style="color:#754C41">Contact</h6>
                        <p><i class="fa fa-home me-3" style="color:#754C41; font-size:24px;"></i> New York, NY 10012, US</p>
                        <p>
                            <i class="fa fa-envelope me-3" style="color:#754C41; font-size:24px;"></i>
                            SweetCake@example.com
                        </p>
                        <p><i class="fa fa-phone me-3" style="color:#754C41; font-size:24px;"></i> + 01 234 567 88</p>
                        <p><i class="fa fa-print me-3" style="color:#754C41; font-size:24px;"></i> + 01 234 567 89</p>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.025);">
            © 2021 Copyright:
            <a class="text-reset fw-bold" href="#">SweetCake.com</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->

</body>
</html>